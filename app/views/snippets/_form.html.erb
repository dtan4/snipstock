<%= bootstrap_form_for(@snippet) do |f| %>
  <% if @snippet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>

      <ul>
      <% @snippet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row-fluid">
    <div class="span4">
      <div class="field">
        <%= f.text_field :title %>
      </div>

      <div class="field">
        <%= f.text_area :description, rows: 3, cols: 40 %>
      </div>

      <div class="field">
        <%= f.text_field :tag_list %>
      </div>

      <div class="field">
        <%= f.text_field :lang %>
      </div>

      <div class="field">
        <%= f.check_box :private %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
    <div class="span8">
      <div class="field">
        <%= f.text_area :code, class: "span12" %>
      </div>
    </div>
  </div>
<% end %>
