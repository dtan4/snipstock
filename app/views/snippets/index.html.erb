<div class="page-header">
  <h1>Listing snippets</h1>
  <% if params[:q] %>
  <p>Search keyword: <%= params[:q] %>, <%= pluralize(@snippets.length, 'result') %></p>
  <% end %>
</div>

<div class="text-right">
  <%= form_tag :search_snippets, method: :get, class: "form-search" do %>
  <%= text_field_tag 'q', params[:q], class:"input-medium search-query" %>
  <%= submit_tag 'Search', class: "btn" %>
  <% end %>
</div>
<%= render 'index' %>
